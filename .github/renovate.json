{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "groupName": "all dependencies",
  "groupSlug": "all",
  "lockFileMaintenance": {
    "enabled": false
  },
  "labels": ["renovate"],
  "packageRules": [
    {
      "groupName": "all dependencies",
      "groupSlug": "all",
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "matchDatasources": ["maven"],
      "registryUrls": [
        "https://repo.bx-team.space/releases",
        "https://repo.bx-team.space/snapshots"
      ]
    }
  ],
  "separateMajorMinor": false
}
